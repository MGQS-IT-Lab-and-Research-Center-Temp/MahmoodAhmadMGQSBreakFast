@model List<BreakFast.Models.BreakFastViewModel>
@{
	ViewData["Title"] = "BreakFast List";
    
}
<section>
	<div class="container p-3">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">Breakfast list</h2>
			</div>
			<div class="col-6 text-end">
			   <a asp-controller="BreakFast" asp-action="CreateBreakFast" class="btn btn-primary">
				    <i class="bi bi-person-plus-fill"></i> Create BreakFast
			   </a>
			</div>
		</div>
	</div>
</section>
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Total BreakFast (@Model.Count)</h3>
					
					</div>
					<div class="card-body">
						<table id="example1" class="table table-bordered table-striped">
							<thead> 
								<tr>
									<th>BreakFastName</th>
									<th>StartTime</th>
									<th>EndTime</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Name</td>
										<td>@item.StartTime</td>
										<td>@item.EndTime</td>
										<td>
							<a asp-controller="BreakFast" asp-action="ViewBreakFastDetail" asp-route-id="@item.Id" class="btn btn-success">ViewBreakFast</a>
										</td> 
									</tr>
								 }
							</tbody>
							<tfoot>
								<tr>
									<th>BreakFastName</th>
									<th>StartTime</th>
									<th>EndTime</th>
								</tr>
							</tfoot>
						</table
					</div>
				</div>

			</div>

		</div>
	</div>

</section>